<div data-role="collapsible" class="custom-collapsible" data-collapsed-icon="arrow-r" data-expanded-icon="arrow-d">
  <h5>
    <div class="ui-grid-b main-font">
      <div class="ui-block-a" style="width:8%">
        <%= image_tag "#{STRIP_PATH}#{@player.team.abbreviation}.png", class: "player-badge-size" %>
      </div>
      <div class="ui-block-b" style="width:12%">
        <%= "##{@player.squad_number}" %>
      </div>
      <div class="ui-block-c" style="width:70%">
        <%= "#{@player.name}" %>
      </div>
      <div class="ui-block-d" align="center" style="width:10%">
        <%= @player.goals.count %>
      </div>
    </div>
  </h5>

  <div class="ui-grid-b" align="center">
    <% @player.team.fixtures.each do |fixture| %>

        <% home_team = fixture.home_team %>
        <% away_team = fixture.away_team %>

        <div class="ui-block-a" style="width:20%"></div>

        <div class="ui-block-b" style="width:10%">
          <%= image_tag "#{STRIP_PATH}#{home_team.abbreviation}.png", class: "strip-size" %>
        </div>

        <div class="ui-block-c kickoff" style="width:20%">
          <%= DateTime.parse(fixture.kickoff_local_time.to_s).strftime('%e %^b') %>
        </div>

        <div class="ui-block-d" style="width:10%">
          <%= image_tag "#{STRIP_PATH}#{away_team.abbreviation}.png", class: "strip-size" %>
        </div>

        <div class="ui-block-e kickoff" style="width:40%">
          <%= fixture.score && !fixture.score.goals.empty? ? "#{fixture.score.goals.where(player_id: @player.id).count}" : 0 %>
        </div>
    <% end %>
  </div>
</div>
