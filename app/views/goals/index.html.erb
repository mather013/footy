<!DOCTYPE html>
<html>
<div data-role="header" data-position="fixed">
  <a href="<%= fa_bets_path %>" class="ui-btn-left" data-theme="a" data-rel="">Back</a>
  <h1>Goal scorers</h1>
</div>


<% if @goals.empty? %>
    <div class="leaderboard" align="center">
      <br>
      No goals
    </div>
<% end %>

<div data-role="collapsible-set">
  <div class="player-goals" data-role="listview" data-count-theme="d">
    <% @goals.each do |goals_for_player| %>
        <% player = goals_for_player.player %>
        <div data-role="collapsible" class="custom-collapsible" data-collapsed-icon="arrow-r" data-expanded-icon="arrow-d">
          <h5>
            <div class="ui-grid-b player-goals">
              <div class="ui-block-a" style="width:8%">
                <%= image_tag "#{ENVIRONMENT_CONFIG['competition']}/strip/#{player.team.abbreviation}.png", class: "strip-size" %>
              </div>
              <div class="ui-block-b" style="width:82%">
                <%= player.name %>
              </div>
              <div class="ui-block-c" align="center" style="width:10%">
                <%= goals_for_player.count %>
              </div>
            </div>
          </h5>

          <div class="ui-grid-b info-txt">
            <div class="ui-block-a" style="width:16%"></div>
            <div class="ui-block-b" style="width:84%">
              <% player.goals.each do |goal| %>
                  <%= image_tag "#{ENVIRONMENT_CONFIG['competition']}/strip/#{goal.opposing_team.abbreviation}.png", class: "strip-size" %>&nbsp
              <% end %>
            </div>
          </div>
        </div>
    <% end %>
  </div>
</div>
<%= render "common/footer" %>
</html>
