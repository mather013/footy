<!DOCTYPE html>
<html>
<div data-role="header" data-position="fixed" data-backbtn="false">
  <a href="<%= weeks_path %>" data-theme="a" data-rel="">Back</a>

  <h1><%= 'Information' %></h1>
</div>

<div class="kickoff" data-role="content">
  <%= "Environment: #{Rails.env}" %> <br>
  <%= "User: #{@user.name}" %> <br>
  <%= "#{@week_current.description}: #{@week_current.status}" %> <br>
  <%= "Current time: #{Time.current}" %> <br>
  <p></p>
  <% @users.each do |user| %>
      <% if user.bets.present? %>
          <div class="ui-grid-b">
            <div class="ui-block-a" style="width:50%">
              <%= user.name %>
            </div>

            <div class="ui-block-b" style="width:20%">
              <%= (Bet.bets_for_user_and_fixtures(user, @week_current.fixtures.map(&:id))).count %>
            </div>

            <% if TOGGLES_CONFIG['last_man_standing'] %>
                <div class="ui-block-c" style="width:20%">
                  <%= LmBet.bets_for_user_and_round(user, @round_current).count if user.lm_survivor? %>
                </div>
            <% end %>

            <% if TOGGLES_CONFIG['five_alive'] %>
                <div class="ui-block-c" style="width:20%">
                  <%= user.fa_bets.count %>
                </div>
            <% end %>

          </div>
      <% end %>
  <% end %>

</div>
</html>
