<!DOCTYPE html>
<html>
<div data-role="header" data-position="fixed" data-backbtn="false" data-tap-toggle="false">
  <a href="<%= weeks_path %>" data-theme="a" data-rel="">Home</a>

  <h1><%= 'Information' %></h1>
  <% if @user.admin? %>
      <a href="<%= jobs_path %>" class="ui-btn-right" data-theme="a" data-rel="">Jobs</a>
  <% end %>
</div>

<div class="kickoff" data-role="content">
  <%= "Environment: #{Rails.env.upcase}" %> <br>
  <%= "User: #{@user.name}" %> <br>
  <%= "#{@week_current.description}: #{@week_current.status}" %> <br>
  <%= "Current time: #{Time.current}" %> <br>
  <p></p>
  <% @users.each do |user| %>
      <% if user.bets.present? || user.lm_bets.present? || user.fa_bets.present? %>
          <div class="ui-grid-b">
            <div class="ui-block-a" style="width:50%">
              <%= user.name %>
            </div>

            <div class="ui-block-b" style="width:20%">
              <%= (Bet.bets_for_user_and_fixtures(user, @week_current.fixtures.map(&:id))).count %>
            </div>

            <% if TOGGLES_CONFIG['last_man_standing'] %>
                <div class="ui-block-c" style="width:10%">
                  <%= LmBet.bets_for_user_and_round(user, @round_current).count if user.lm_survivor? %>
                </div>
            <% end %>

            <% if TOGGLES_CONFIG['five_alive'] %>
                <div class="ui-block-c" style="width:20%">
                  <%= user.fa_bets.count %>
                </div>
            <% end %>

            <% if TOGGLES_CONFIG['goal_buster'] %>
                <div class="ui-block-d" style="width:20%">
                  <%= user.gb_bet.team.abbreviation.upcase if user.gb_bet.present? %>
                </div>
            <% end %>

          </div>
      <% end %>
  <% end %>

</div>
</html>