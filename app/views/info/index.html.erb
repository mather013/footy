<!DOCTYPE html>
<html>
<div data-role="header" data-position="fixed" data-backbtn="false">
  <a href="<%= weeks_path %>" data-theme="a" data-rel="">Back</a>

  <h1><%= "Information" %></h1>
</div>

<div class="kickoff" data-role="content">
  <%= "Environment: #{Rails.env}" %> <br>
  <%= "User: #{@user.name}" %> <br>

  <p></p>

  <% @users.each do |user| %>
      <% if user.bets.present? %>
          <div class="ui-grid-b">
            <div class="ui-block-a" style="width:50%">
              <%= user.name %>
            </div>

            <div class="ui-block-b" style="width:20%">
              <%= user.bets.count %>
            </div>

            <div class="ui-block-c" style="width:20%">
              <%= user.lm_bets.count %>
            </div>
          </div>
      <% end %>
  <% end %>

</div>
</html>
