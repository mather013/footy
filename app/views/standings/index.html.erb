<!DOCTYPE html>
<html>
<div data-role="header" data-position="fixed" data-backbtn="false" data-tap-toggle="false">
  <a href="<%= weeks_path %>" class="ui-btn-left" data-theme="a" data-rel="">Back</a>

  <h1><%= 'League Table' %></h1>
  <% if @user.admin? %>
      <a href="<%= info_path %>" class="ui-btn-right" data-theme="a" data-rel="">Info</a>
  <% end %>
</div>

<div class="leaderboard">
  <ul data-role="listview">
    <li class="custom-list-header fixture-date">
      <div class="ui-grid-b">
        <div class="ui-block-a" align="left" style="width:12%"></div>
        <div class="ui-block-b" align="left" style="width:38%"></div>
        <div class="ui-block-c" align="center" style="width:10%">P</div>
        <div class="ui-block-c" align="center" style="width:10%">GD</div>
        <div class="ui-block-c" align="right" style="width:10%">PTS</div>
        <div class="ui-block-d" align="right" style="width:20%">Form</div>
      </div>
    </li>
  </ul>
</div>

<div class="leaderboard">
  <ul data-role="listview">

    <% @standings.each do |standing| %>
        <li class="custom-list">
          <div class="ui-grid-b">

            <div class="ui-block-a" style="width:12%">
              <%= standing.position.ordinalize %>
            </div>

            <div class="ui-block-b" style="width:38%">
              <% competition_type = ENVIRONMENT_CONFIG[ENVIRONMENT_CONFIG['competition']]['type'] %>
              <%= image_tag "#{ENVIRONMENT_CONFIG[competition_type]['badge_path']}#{standing.team.abbreviation}.png", class: 'strip-size' %>
              &nbsp
              <%= "#{standing.team.name}" %>
            </div>

            <div class="ui-block-c" align="center" style="width:10%">
              <%= "#{standing.played}" %>
            </div>
            <div class="ui-block-c" align="center" style="width:10%">
              <%= "#{standing.goal_difference}" %>
            </div>

            <div class="ui-block-c" align="right" style="width:10%">
              <%= standing.points %>
            </div>

            <div class="ui-block-d" align="right" style="width:20%">
              <% if standing.form.present? %>
                  <% standing.form.upcase.split("").each do |char| %>
                      <% style = (char == 'W' ? 'won' : (char == 'L' ? 'lost' : 'draw')) %>
                      <!--<span class="standings <%= style %>"><%= char %></span>-->
                      <span class="standings <%= style %>"></span>
                  <% end %>
              <% else %>
              N/A
              <% end %>
            </div>

          </div>
        </li>
    <% end %>
  </ul>
</div>
<%= render 'common/footer' %>
</html>
