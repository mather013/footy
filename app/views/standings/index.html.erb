<!DOCTYPE html>
<html>
<div data-role="header" data-position="fixed" data-backbtn="false">
  <a href="<%= weeks_path %>" class="ui-btn-left" data-theme="a" data-rel="">Back</a>
  <h1><%= "Recent Form" %></h1>
  <% if @user.admin? %>
      <a href="<%= info_path %>" class="ui-btn-right" data-theme="a" data-rel="">Info</a>
  <% end %>
</div>

<div class="leaderboard">
  <ul data-role="listview">
    <% @standings.each do |standing| %>
        <li class="custom-list">
          <div class="ui-grid-b">

            <div class="ui-block-a" style="width:20%">
              <% case standing.position %>
              <% when 1 %>
                  <%="1st" %>
              <% when 2 %>
                  <%="2nd" %>
              <% when 3 %>
                  <%="3rd" %>
              <% else %>
                  <%="#{standing.position}th" %>
              <%end %>
            </div>

            <div class="ui-block-b" style="width:40%">
              <%= image_tag "#{ENVIRONMENT_CONFIG['competition']}/strip/#{standing.team.abbreviation}.png", class: "strip-size" %>&nbsp
              <%= "#{standing.team.name}" %>
            </div>

            <div class="ui-block-b" style="width:40%">
              <%= "#{standing.form.gsub(/(.{1})/, '\1 ')}" %>
            </div>

          </div>
        </li>
    <% end %>
  </ul>
</div>
<%= render "common/footer" %>
</html>
