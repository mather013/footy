<!DOCTYPE html>
<html>

<div class="ui-title" data-role="header" align="left" data-position="fixed" data-tap-toggle="false">
  <a href="" class="ui-btn-left" data-theme="a" data-rel="back">Back</a>

  <h1><%= "#{DateTime.parse("1900-#{@month_id}-01").strftime('%B').upcase}" %></h1>
</div>

<div class="leaderboard">
  <ul data-role="listview">
    <% monthly_points = Points::HdaPoint.total_points_for_weeks(@week_ids_for_month) %>
    <% monthly_points.each do |point| %>
        <li class="custom-list">
          <div class="ui-grid-b">

            <div class="ui-block-a" style="width:20%">

            </div>

            <% user = User.find(point.user_id) %>

            <% username_style = (user.id == @current_user.id ? "ui-block-b current_user" : "ui-block-b") %>
            <div class="<%= username_style %>" style="width:40%">
              <%= user.name %>
            </div>

            <div class="ui-block-c" align="right" style="width:14%">
              <%= point.total.to_i %>
            </div>

            <div class="ui-block-c payout-icon" align="right" style="width:14%">

            </div>

            <div class="ui-block-d" align="right" style="width:12%">

            </div>

          </div>
        </li>
    <% end %>
  </ul>
</div>
<%= render 'common/footer' %>
</html>
