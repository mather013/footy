<div class="ui-grid-b">
  <% @round.week.status == 'Open' ? block_a_style='width:48%' : block_a_style='width:45%' %>
  <div class="ui-block-a main-font" style="<%= block_a_style %>">
    <%= "Round #{@round.id.to_s.rjust(2, '0')}" %>
    <% if @round.week.status == 'In play' %>
        <span class="label label-warning">In play</span>
    <% elsif @round.week.status == 'Open' %>
        <span class="label label-success">Open</span>
    <% end %>
    <br>
    <h10 class="kickoff">
      <%= "#{DateTime.parse(@round.week.close_date_local_time.to_s).strftime('%e %B %H:%M')}" %>
    </h10>
  </div>
  <% if @round.week.status != 'Open' %>
      <div class="ui-block-b main-font" style="width:45%">
        <% if @lm_bet.present? %>
            <%= image_tag "#{ENVIRONMENT_CONFIG['competition']}/strip/#{@lm_bet.team.abbreviation}.png", class: 'strip-size' %>
            <%= @lm_bet.team.name.upcase %>
            <br>
            <h10 class="kickoff">
              <%= @lm_bet.opposing_team_name %>
            </h10>
        <% end %>
      </div>

      <% @lm_bet.present? ? bet_result = @lm_bet.result : bet_result = 'L' %>
      <% if bet_result == 'W' %>
          <div class="correct ui-block-c main-font" align="center" style="width:10%">
            <%= 'W' %>
            <br>
            <h10 class="kickoff">
              <%= @lm_bet.fixture.score.to_s %>
            </h10>
          </div>
      <% elsif bet_result == 'L' or bet_result == 'D' %>
          <div class="wrong ui-block-c main-font" align="center" style="width:10%">
            <%= 'L' %>
            <br>
            <h10 class="kickoff">
              <%= @lm_bet.fixture.score.to_s %>
            </h10>
          </div>
      <% end %>
  <% else %>
      <div class="ui-block-b main-font" style="width:45%">
        <%= '? ? ? ? ? ?' if @view_user.lm_survivor? %>
      </div>
  <% end %>
</div>
