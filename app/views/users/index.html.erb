<!DOCTYPE html>
<html>
<div data-role="header" data-position="fixed">
  <a href="<%= week_points_path(@week.id) %>" data-theme="a" data-rel="">Back</a>
  <h1><%= "#{@view_user.name} R#{@week.id}" %></h1>
</div>

<div data-role="content">
  <ul data-role="listview">
    <% @fixtures.order('kickoff asc').each do |fixture| %>
        <% @fixture = fixture %>
        <li class="custom-list">
          <div class="ui-grid-b">
            <div class="ui-block-a main-font" style="width:90%">
              <%= image_tag "#{ENVIRONMENT_CONFIG['competition']}/strip/#{@fixture.home_team.abbreviation}.png", class: 'strip-size' %>
              <%= "#{ @fixture.home_team.name[0..10] }" %>
              vs
              <%= "#{ @fixture.away_team.name[0..10] }" %>
              <%= image_tag "#{ENVIRONMENT_CONFIG['competition']}/strip/#{@fixture.away_team.abbreviation}.png", class: 'strip-size' %>
              <br>
              <h10 class="kickoff">
                <%= DateTime.parse(@fixture.kickoff_local_time.to_s).strftime('%A %e %B %Y %H:%M') %>
              </h10>
            </div>

            <% bet=Bet.find_by_fixture_id_and_user_id(@fixture.id, @view_user.id) %>
            <% bet.nil? ? outcome = "" : outcome = bet.outcome%>

            <div class="<%= outcome %> ui-block-b main-font" align="center" style="width:10%">
              <% hidden_value = ENVIRONMENT_CONFIG['bet_type_hda'] ? '?' : '? - ?' %>
              <%= bet.nil? || fixture.betable? ? hidden_value : "#{bet.value}" %>
              <br>
              <h10 class="kickoff">
                <%= "#{@fixture.score.home} - #{@fixture.score.away}" if @fixture.score.present? %>
              </h10>
              </br>
            </div>
          </div>
        </li>
    <% end %>
  </ul>
</div>
<%= render 'common/footer' %>
</html>