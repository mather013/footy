<!DOCTYPE html>
<html>

<div class="ui-title" data-role="header" align="left" data-position="fixed" data-tap-toggle="false">
  <% if ENVIRONMENT_CONFIG['competition'] == 'premier_league' %>
      <a href="<%= standings_path %>" class="ui-btn-left" data-theme="a" data-rel="">Form</a>
  <% else %>
      <% if @user.admin? %>
          <a href="<%= info_path %>" class="ui-btn-left" data-theme="a" data-rel="">Info</a>
      <% end %>
  <% end %>
  <h1>Footy Forecast</h1>
  <a href="<%= points_path %>" class="ui-btn-right" data-theme="a" data-rel="">Table</a>
</div>

<div data-role="content">
  <ul data-role="listview" id="fix-list">
    <% @weeks.each do |week| %>
        <li>
          <a href="<%= fixtures_path(week.id) %>">
            <div class="ui-grid-b">
              <div class="ui-block-a main-font" style="width:90%">
                <%= "#{week.description}" %>

                <% case week.status %>
                <% when 'Complete' %>
                    <span class="label label-default">Complete</span>
                <% when 'In play' %>
                    <span class="label label-warning">In play</span>
                <% when 'Open' %>
                    <span class="label label-success">Open</span>
                <% end %>

                <br>
                <h10 class="kickoff">
                  <%= "#{DateTime.parse(week.close_date_local_time.to_s).strftime('%e %B %H:%M')}" %>
                </h10>
              </div>

              <div class=ui-block-c" style="width:8%">
                <% point = Point.point_for_user_and_week(User.find(@user), week).first %>
                <% if point.present? %>
                    <% points_style = point.present? ? point.value : 0 %>
                    <div class="<%= "label points_#{points_style}" %>">
                      <%= point.value if point.present? %>
                    </div>
                <% end %>
              </div>
            </div>
          </a>
        </li>
    <% end %>
  </ul>
</div>
<%= render 'common/footer' %>
</html>