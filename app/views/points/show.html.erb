<!DOCTYPE html>
<html>

<div data-role="header" data-position="fixed" data-backbtn="false">
  <a href="<%= fixtures_path(@week.id) %>" data-theme="a" data-rel="">Back</a>
  <h1><%= @week.description %></h1>
</div>

<div class="leaderboard">
  <ul data-role="listview">
    <% index = 0 %>
    <% position = 0 %>
    <% previous_score = -10 %>

    <% if @points.empty? %>
        <div class="ui-grid-a" align="center">
          <br>
          Not marked
        </div>
    <% end %>

    <% @points.each do |point| %>
        <li class="custom-list">
          <a href="<%= user_week_fixtures_path(point.user_id, @week.id) %>" class="leaderboard">
            <div class="ui-grid-b">
              <% position +=1 unless previous_score == point.value %>
              <% index += 1 %>
              <div class="ui-block-a" style="width:10%">
                <% if previous_score == point.value %>
                    <%= "#{position}" %>
                <% else %>
                    <%= "#{index}" %>
                    <% position = index %>
                <% end %>
              </div>

              <% user = User.find(point.user_id) %>
              <% username_style = (user.id == @current_user.id ?  'ui-block-b current_user' : 'ui-block-b') %>

              <div class="<%=username_style%>" style="width:80%">
                <%= user.name %>
              </div>

              <div class="ui-block-c" align="center" style="width:10%">
                <%= "#{point.value}" %>
              </div>

            </div>
          </a>
        </li>
        <% previous_score = point.value %>
    <% end %>
  </ul>
</div>
<%= render 'common/footer' %>
</html>
