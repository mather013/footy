<!DOCTYPE html>
<html>
<div data-role="header" data-position="fixed" data-backbtn="false" data-tap-toggle="false">
  <a href="<%= bets_goals_galore_bets_path(@round.id) %>" class="ui-btn-left" data-theme="a" data-rel="">Back</a>
  <h1>
    <%= "Round #{@round.try(:id) || '?' }" %>
  </h1>
</div>

<div class="leaderboard">
  <ul data-role="listview">

    <% @points.each do |point| %>
        <% user = point.user %>

        <li class="custom-list">
          <div class="ui-grid-b">

            <div class="ui-block-a" style="width:10%">

            </div>

            <div class="ui-block-b" style="width:10%">

            </div>

            <% username_style = (user.id == @user.id ? 'ui-block-b current_user' : 'ui-block-b') %>
            <div class="<%= username_style %>" style="width:45%">
              <%= user.name %>
            </div>

            <div class="ui-block-c payout-icon" style="width:10%">

            </div>

            <% points = point.value.to_i %>
            <div class="ui-block-d disabled-font" align="center" style="width:15%">
              <%= points if points < 0 %>
            </div>

            <div class="ui-block-e" align="center" style="width:10%">
              <%= points > 0 ? points : 0 %>
            </div>

          </div>
        </li>
    <% end %>
  </ul>
</div>
<%= render 'common/footer' %>
</html>
